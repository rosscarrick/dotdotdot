# Get git branch and file changes
function git_stats()
{
  branch=$(git branch 2> /dev/null | sed -n -e 's/^\* \(.*\)/\1/p')

  if [[ $branch == "" ]];
  then
    :
  else
    diffs=$(git diff --shortstat)
    files_changed=${diffs[(ws:,:)1]}
    echo '%B%F{yellow}('$branch'%f%F{red}'$files_changed'%f%F{yellow})%f%b'
  fi
}

# Enable substitution in the prompt.
setopt prompt_subst

current_dir='%F{white}%B%2/%b%f'
newline=$'\n'
PROMPT='$current_dir $(git_stats)$newline'

export EDITOR='vim'

alias notes='cd ~/.notes && vi .'
alias g=git
alias d=docker
alias k=kubectl
alias y=yarn
alias c='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias vi='nvim'
alias vim='vi'
alias vv='vi .'
alias vimrc='vi ~/.config/nvim/init.vim'
alias lal='ls -la'
alias tx=tmux
alias txn='tmux new -s'
alias txa='tmux attach -t'

# Create hidden-config if missing
if [ -f ~/.hidden-config ]; then
    source ~/.hidden-config
else
    print "404: '~/.hidden-config' not found. Creating it!"
    touch ~/.hidden-config
fi

